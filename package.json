{
  "name": "next-swr",
  "description": "Revalidate stale data in Next.js",
  "version": "0.1.2-canary.1",
  "license": "MIT",
  "author": "aprendendofelipe",
  "repository": "aprendendofelipe/next-swr",
  "keywords": [
    "cache",
    "fetch",
    "next",
    "request",
    "revalidate",
    "swr"
  ],
  "main": "dist/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./middlewareClock": {
      "import": "./dist/middlewareClock.js",
      "require": "./dist/middlewareClock.js"
    }
  },
  "typings": "dist/index.d.ts",
  "files": ["dist"],
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "analyze": "size-limit --why",
    "build": "dts build --entry ./src/index.ts --entry ./src/middlewareClock.ts --format cjs",
    "commit": "cz",
    "lint": "dts lint",
    "lint:fix": "dts lint --fix",
    "lint:prettier": "prettier --check .",
    "pre-commit": "lint-staged",
    "prepare": "dts build",
    "size": "size-limit",
    "start": "dts watch",
    "test": "dts test --passWithNoTests"
  },
  "lint-staged": {
    "*.ts": [
      "npm run lint:fix"
    ]
  },
  "peerDependencies": {
    "next": ">=13",
    "react": ">=18",
    "react-dom": ">=18"
  },
  "husky": {
    "hooks": {
      "pre-commit": "dts lint"
    }
  },
  "prettier": {
    "endOfLine": "auto",
    "printWidth": 120,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "size-limit": [
    {
      "path": "dist/next-swr.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/next-swr.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@commitlint/cli": "17.6.1",
    "@commitlint/config-conventional": "17.6.1",
    "@size-limit/preset-small-lib": "8.2.4",
    "@tsconfig/recommended": "1.0.2",
    "@tsconfig/vite-react": "1.0.1",
    "@types/react": "18.0.35",
    "@types/react-dom": "18.0.11",
    "dts-cli": "2.0.0",
    "husky": "8.0.3",
    "lint-staged": "13.2.1",
    "tslib": "2.5.0",
    "typescript": "5.0.4"
  }
}
